<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo_loginFragment_ImageView"
        android:layout_width="match_parent"
        android:layout_height="583dp"
        android:layout_weight="3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/signIn_loginFragment_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingEnd="100dp"
            android:text="@string/signInView_loginFragment" />

        <TextView
            android:id="@+id/signUp_loginFragment_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="100dp"
            android:paddingTop="10dp"
            android:gravity="center"
            android:text="@string/signUpView_loginFragment"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragmentContainer_loginFragment_FrameLayout"
        android:layout_width="match_parent"
        android:layout_height="365dp"
        android:layout_weight="1">


    </FrameLayout>

</LinearLayout>