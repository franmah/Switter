<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo_loginFragment_ImageView"
        android:layout_width="match_parent"
        android:layout_height="347dp"
        android:layout_weight="3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/signIn_loginFragment_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:text="@string/signInView_loginFragment"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/signUp_loginFragment_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:text="@string/signUpView_loginFragment"
            android:textSize="24sp" />

    </LinearLayout>

    <View android:background="#1da1f2"
        android:layout_width = "match_parent"
        android:layout_height="1dp"/>

    <FrameLayout
        android:id="@+id/fragmentContainer_loginFragment_FrameLayout"
        android:layout_width="match_parent"
        android:layout_height="365dp"
        android:layout_weight="1">


    </FrameLayout>

</LinearLayout>