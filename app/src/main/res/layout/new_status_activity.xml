<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profilePic_ImageView_newStatusActivity"
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/handle_textView_newStatusActivity"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="18sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/message_editText_newStatusActivity"
        android:layout_width="398dp"
        android:layout_height="186dp"
        android:gravity="start"
        android:padding="10dp"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:text="msg"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/txtLinkWrapper_linearLayout_newStatusActivity"
                android:layout_width="241dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtLink_editText_newStatusActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="txt file link" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/imageLinkWrapper_linearLayout_newStatusActivity"
                android:layout_width="238dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/imageEdit_textView_newStatusActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/editPictureString_newStatusActivity"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/sendButton_newStatusActivity"
            android:layout_width="74dp"
            android:layout_height="54dp"
            android:layout_gravity="end"
            android:text="@string/sendButtonString_newStatusActivity" />


    </LinearLayout>


</LinearLayout>