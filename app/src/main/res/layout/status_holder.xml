<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="253dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout_statusHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/profilePicture_imageView_statusHolder"
                android:layout_width="71dp"
                android:layout_height="63dp" />

            <TextView
                android:id="@+id/profileName_textView_statusHolder"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="NAME" />

            <TextView
                android:id="@+id/handle_TextView_statusHolder"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="HANDLE" />

            <TextView
                android:id="@+id/date_textView_statusHolder"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="SETP 11" />


        </LinearLayout>

        <TextView
            android:id="@+id/text_TextView_statusHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/pictureAttachment_statusHolder"
                android:layout_width="199dp"
                android:layout_height="121dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/txtLink_textView_statusHolder"
                android:layout_width="168dp"
                android:layout_height="62dp"/>


        </LinearLayout>


    </LinearLayout>

    <View
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

</android.support.v7.widget.CardView>