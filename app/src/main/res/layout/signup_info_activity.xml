<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/profilePicture_signUpInfoActivity_imageView"
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/editPhoto_signUpInfoActivity_EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="@string/editPhotoView_signUpInfoActivity"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/firstName_signUpInfoActivity_editText"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Mister"/>

            <EditText
                android:id="@+id/lastName_signUpInfoActivity_editText"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Test"/>

            <EditText
                android:id="@+id/handle_signUpInfoActivity_editText"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="\@amazingHandle"/>


            <Button
                android:id="@+id/continue_signUpInfoActivity_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/continueButton_signUpInfoActivity" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>