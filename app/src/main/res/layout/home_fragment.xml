<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profilePicture_homeFragment_ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="20dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/logout_homeFragment"
            android:layout_width="47dp"
            android:layout_height="56dp"
            android:gravity="center"
            android:paddingEnd="0dp" />

        <TextView
            android:id="@+id/search_homeFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingEnd="20dp"
            android:text="search" />


        <TextView
            android:id="@+id/newTweet_homeFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingEnd="20dp"
            android:text="new tweet" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragmentContainer_homeFragment_FrameLayout"
        android:layout_width="match_parent"
        android:layout_height="601dp"
        android:paddingTop="10dp"/>

</LinearLayout>